<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/panelfaculty"
    android:background="@color/btn_light"
    >

    <ImageView
        android:id="@+id/facultylogo"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"

        >

        <TextView
            android:id="@+id/facultyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/btn_light"
            android:gravity="center"
            android:padding="5sp"
            android:text="FACULTAD DE CIENCIAS DE LA INGENIERÍA"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:textColor="@color/btn_info"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/facultyDecano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10sp"
            android:text="Decano: Chiriboga Casanova Washington"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/facultyemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:padding="3dip"
            android:textAlignment="center"
            android:text="fcip@uteq.edu.ec"
            android:textColor="#2196F3"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/facultyLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="15dp"
            android:text="Campus 'Ingeniero Manuel Agustín Haz Álvarez', Av. Quito km. 1 1/2 vía a Santo Domingo de los Tsáchilas"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/facultyvisite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/btn_secondary"
            android:text="@string/visitar" />

    </LinearLayout>
</LinearLayout>